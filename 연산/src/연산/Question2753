import java.util.Scanner;

public class Main {
public static void main(String[] args) {
	int A;
	
	Scanner scanner = new Scanner(System.in);
	A = scanner.nextInt();
	
	
		
	
	if(A%4==0 && A%100!=0) {
		
		System.out.println("1");
		
	}
	else if(A%100==0 && A%400!=0) {
		
		System.out.println("0");
	}
	else if(A%400==0) {
		System.out.println("1");
		
			}	
	else {
		System.out.println("0");
		
	}
		
	}
}
